<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.text.Font?>
<GridPane fx:controller="front.ihm.FileChooserController"
          xmlns:fx="http://javafx.com/fxml" alignment="center"
          hgap="10" vgap="10">
    <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>
    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100"
                           maxWidth="Infinity" halignment="RIGHT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity" hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>

    <Label text="Fraudinger" GridPane.columnIndex="0"
           GridPane.rowIndex="0" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="CENTER" >
        <font>
            <Font name="Arial Black" size="24" ></Font>
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Label>

    <Button prefWidth="100" text="ZIP modèle" onAction="#handleChooseModelZipFile"
            GridPane.columnIndex="0"
            GridPane.rowIndex="1" >
    </Button>
    <Label text="Aucun fichier selectionné." fx:id="modelZipPathLabel" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Button prefWidth="100" text="ZIP élèves" onAction="#handleChooseStudentsZipFile"
            GridPane.columnIndex="0"
           GridPane.rowIndex="2" >
    </Button>
    <Label text="Aucun fichier selectionné." fx:id="studentZipPathLabel" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Button fx:id="settings" text="Réglages filtres"
            prefWidth="150" minHeight="30"
            GridPane.columnIndex="0" GridPane.rowIndex="4"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="CENTER"
            onAction="#settings">
        <GridPane.margin>
            <Insets top="10" right="0" bottom="10" left="0"></Insets>
        </GridPane.margin>
    </Button>

    <Button fx:id="start" text="Lancer l'analyse"
            prefWidth="150" minHeight="30"
            GridPane.columnIndex="0" GridPane.rowIndex="5"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="CENTER"
            onAction="#startCommands">
        <GridPane.margin>
            <Insets top="0" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Button>

</GridPane>